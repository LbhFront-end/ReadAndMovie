page {
  background: #b3d4db;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 160rpx 0 100rpx 0;
  border-radius: 100%;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
}

.moto-container {
  width: 200rpx;
  height: 80rpx;
  margin-top: 200rpx;
  border: 1px solid #405f80;
  border-radius: 5px;
  text-align: center;
}

.moto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}